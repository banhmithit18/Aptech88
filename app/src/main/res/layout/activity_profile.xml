<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_back_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/returns" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
            android:id="@+id/profile_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_btn_login"
            android:drawableLeft="@drawable/ic_baseline_account_circle_login"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHighlight="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn_login"
                android:drawableLeft="@drawable/ic_baseline_phone_enabled_24"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:text="0787751485"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/profile_age"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radius_btn_login"
                android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:padding="10dp"
                android:text="21"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn_login"
                android:drawableLeft="@drawable/ic_baseline_markunread_24"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:enabled="false"
                android:text="laudaden111@gmail.com"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:gravity="center"
                android:id="@+id/profile_pass"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn_login"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_baseline_lock_login"
                android:ems="10"
                android:enabled="false"
                android:text="nqt020601"
                android:inputType="textPassword"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Change password"
                android:textColor="#C32727"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/profile_address"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_btn_login"
                android:drawableLeft="@drawable/ic_baseline_add_location_24"
                android:ems="10"
                android:gravity="center"
                android:inputType="text|textMultiLine"
                android:padding="10dp"
                android:text="61 nui cam1,Vinh Thai,Nha Trang"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/update_profile"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/radius_btn"
                android:gravity="center"
                android:text="Update"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>