<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transfer"
    android:orientation="horizontal"
    android:padding="15dp">


    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_back_home_to_momo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/returns" />

        <LinearLayout
            android:id="@+id/momo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/momopay" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/bundesliga"
                android:text="MomoPay"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_marginRight="15sp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/zalopay"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/bundesliga"
                android:text="Zalo Pay"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/paypal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_marginRight="25dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/paypal"
/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/bundesliga"
                android:text=" Paypal"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:gravity="center"
            android:orientation="horizontal"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_marginRight="28dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/qrpay" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:src="@drawable/bundesliga"
                android:text="QR Pay"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>